{
  "name": "duty-roster-backend",
  "version": "1.0.0",
  "description": "Backend API for Multi-Enterprise Duty Roster Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "node scripts/setupDatabase.js",
    "notifications:setup": "node src/scripts/setupNotificationTables.js",
    "notifications:init": "node src/scripts/initializeNotifications.js",
    "notifications:cleanup": "node -e \"require('./src/services/NotificationCleanupService').runCleanup().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\""
  },
  "keywords": [
    "duty",
    "roster",
    "management",
    "enterprise",
    "shifts"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  }
